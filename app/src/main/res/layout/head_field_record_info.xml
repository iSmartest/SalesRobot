<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_main_default">
    <include layout="@layout/v_horizontal_line"/>
    <LinearLayout
        android:id="@+id/ll_item01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/tv_record_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/tv_record_info_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:layout_marginBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/tv_record_info_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/tv_record_info_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_weight="2"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/default_color"
        android:textSize="18sp"
        android:text="现场记录"
        android:paddingLeft="15dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"/>
</LinearLayout>