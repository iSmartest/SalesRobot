<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_main_background">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <com.empowerment.salesrobot.view.RoundedImageView
            android:id="@+id/iv_machine_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/my_head_portrait">
        </com.empowerment.salesrobot.view.RoundedImageView>

        <ImageView
            android:id="@+id/iv_left_iamge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_fail_empty"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:background="@drawable/bj_left_text"/>
        <TextView
            android:id="@+id/text_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:paddingRight="3dp"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:background="@drawable/bj_left_text"
            android:text="slhgudhsguhdskjghdskjg"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_right_iamge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_fail_empty"
            android:scaleType="centerCrop"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@drawable/bj_right_text"/>
        <TextView
            android:id="@+id/text_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bj_right_text"
            android:text=""
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:visibility="visible"
            android:textSize="16dp"/>
        <com.empowerment.salesrobot.view.RoundedImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/my_head_portrait">
        </com.empowerment.salesrobot.view.RoundedImageView>
    </LinearLayout>
</RelativeLayout>