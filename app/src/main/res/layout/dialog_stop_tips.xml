<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corners_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小宝"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/log_out_tips_tv"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="是否紧急停止？"
            android:layout_marginTop="8dp"
            android:textColor="@color/vipTextColor" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <Button
            android:id="@+id/log_out_tips_btn_cancel"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:gravity="center"
            android:text="取消" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@color/divider_color" />
        <Button
            android:id="@+id/log_out_tips_btn_sure"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>