<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_main_background"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CustomerInfoActivity">

    <include layout="@layout/activity_base"/>

    <LinearLayout
        android:id="@+id/customer_Todays"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今日客户"
            android:textColor="@color/homeTextColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_today_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12"
            android:gravity="center|end"
            android:drawablePadding="6dp"
            android:textColor="@color/vipTextColor"
            android:textSize="18sp"
            android:drawableRight="@drawable/right_in"
            android:drawableEnd="@drawable/right_in"/>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:id="@+id/customer_Per"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预成交客户"
            android:textColor="@color/homeTextColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_per_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12"
            android:gravity="center|end"
            android:drawablePadding="6dp"
            android:textColor="@color/vipTextColor"
            android:textSize="18sp"
            android:drawableRight="@drawable/right_in"
            android:drawableEnd="@drawable/right_in"/>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>


    <LinearLayout
        android:id="@+id/customer_Past"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="往期客户"
            android:textColor="@color/homeTextColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_past_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12"
            android:gravity="center|end"
            android:drawablePadding="6dp"
            android:textColor="@color/vipTextColor"
            android:textSize="18sp"
            android:drawableRight="@drawable/right_in"
            android:drawableEnd="@drawable/right_in"/>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:id="@+id/customer_VIP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="VIP客户"
            android:textColor="@color/homeTextColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_vip_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12"
            android:gravity="center|end"
            android:drawablePadding="6dp"
            android:textColor="@color/vipTextColor"
            android:textSize="18sp"
            android:drawableRight="@drawable/right_in"
            android:drawableEnd="@drawable/right_in"/>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>


</LinearLayout>
