<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical"
    tools:context=".ui.activity.ModificationActivity">

    <include layout="@layout/activity_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_main_default"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="姓名："
            android:textColor="@color/vipTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modif_Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/text_color_subtitle"
            android:text="张浩彬"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_main_default"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="性别："
            android:textColor="@color/vipTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modif_Sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:text="男"
            android:textColor="@color/text_color_subtitle"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_main_default"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="年龄："
            android:textColor="@color/vipTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modif_Age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:text="23"
            android:textColor="@color/text_color_subtitle"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="职位："
            android:textColor="@color/vipTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modif_Work"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:text="汽车销售"
            android:textColor="@color/text_color_subtitle"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/app_main_default">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="工号："
            android:textColor="@color/vipTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modif_Number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_subtitle"
            android:layout_weight="1"
            android:text="00006"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
